{
  "name": "funnel",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/funnel",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/funnel"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/funnel"
        },
        "production": {}
      }
    },
    "pre-serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm build:libs",
        "cwd": "{workspaceRoot}"
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "funnel:build",
        "dev": true,
        "port": 3002
      },
      "dependsOn": ["pre-serve", "^build"],
      "configurations": {
        "development": {
          "buildTarget": "funnel:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "funnel:build:production",
          "dev": false
        }
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "funnel:build:production",
        "dev": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "options": {
        "config": "apps/funnel/vitest.config.ts"
      }
    }
  }
}
