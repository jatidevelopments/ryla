# ============================================
# AI Influencer Funnel - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ============================================
# Site Configuration
# ============================================
# Your site's public URL (used for SEO, sitemap, robots.txt)
NEXT_PUBLIC_SITE_URL=https://goviral.ryla.ai

# ============================================
# API Configuration
# ============================================
# Backend API base URL (used for all API calls including finby)
NEXT_PUBLIC_API_BASE_URL=https://devapi.mydreamcompanion.com

# ============================================
# Payment Provider - finby
# ============================================
# Fallback redirect URL after successful payment (if "All Spots Reserved" step not found)
# Defaults to "/" if not set
NEXT_PUBLIC_FINBY_PAYMENT_REDIRECT=/

# ============================================
# Analytics - PostHog
# ============================================
# PostHog project API key (required for analytics)
NEXT_PUBLIC_POSTHOG_TOKEN=your_posthog_token_here

# PostHog API host (default: https://eu.i.posthog.com)
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# Enable analytics in development (default: false)
# Set to "true" to enable PostHog tracking in development mode
NEXT_PUBLIC_ENABLE_DEV_ANALYTICS=false

# ============================================
# Analytics - Funnel Configuration
# ============================================
# Funnel name for analytics tracking
NEXT_PUBLIC_FUNNEL_NAME=funnel-adult-v3

# Funnel type (e.g., "hard_paywall", "soft_paywall")
NEXT_PUBLIC_FUNNEL_TYPE=hard_paywall

# ============================================
# Funnel Session Management
# ============================================
# Enable backend API in development (default: false)
# Set to "true" to enable session tracking in development mode
NEXT_PUBLIC_ENABLE_DEV_FUNNEL_API=false

# Enable debug logging for funnel API operations
NEXT_PUBLIC_DEBUG_FUNNEL_API=false

# ============================================
# Dynamic Funnel Feature Flags
# ============================================
# Master switch for dynamic funnel feature
NEXT_PUBLIC_USE_DYNAMIC_FUNNEL=false

# Percentage of users to use dynamic funnel (0-100)
NEXT_PUBLIC_DYNAMIC_FUNNEL_PERCENTAGE=0

# Enable A/B testing capabilities
NEXT_PUBLIC_ENABLE_AB_TESTING=false

# Enable real-time configuration updates
NEXT_PUBLIC_ENABLE_REAL_TIME_CONFIG=false

# Enable enhanced analytics tracking
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=false

# Enable JsonLogic rule engine
NEXT_PUBLIC_ENABLE_RULE_ENGINE=true

# Enable dynamic component rendering
NEXT_PUBLIC_ENABLE_COMPONENT_FACTORY=true

# Enable data migration utilities
NEXT_PUBLIC_ENABLE_MIGRATION=false

# External funnel configuration URL (optional)
# NEXT_PUBLIC_FUNNEL_CONFIG_URL=https://your-api.com/funnel-config

# ============================================
# Assets & CDN (Optional)
# ============================================
# Image CDN URL for serving optimized images (optional)
# NEXT_PUBLIC_IMAGE_CDN_URL=https://cdn.example.com

# CDN URL for static assets (optional, currently commented out in next.config.ts)
# NEXT_PUBLIC_CDN_URL=https://cdn.example.com

# ============================================
# Analytics - Mixpanel (DISABLED)
# ============================================
# Mixpanel is currently disabled - tracking moved to PostHog
# Uncomment if you want to re-enable Mixpanel
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ============================================
# Backend Environment Variables (NOT for frontend)
# ============================================
# These should be set on your backend server, NOT in this .env file
# 
# finby Payment Provider (Backend only)
# FINBY_ACCOUNT_ID=your_finby_account_id
# FINBY_SECRET_KEY=your_finby_secret_key
# FINBY_API_URL=https://amapi.finby.eu/
#
# Note: finby credentials must be kept secure on the backend.
# The frontend only needs NEXT_PUBLIC_FINBY_PAYMENT_REDIRECT

# ============================================
# Node Environment
# ============================================
# Automatically set by Next.js (development/production/test)
# NODE_ENV=development
