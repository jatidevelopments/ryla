# ===========================================
# RYLA Web App - Environment Configuration
# ===========================================
# This file is for the Next.js web app (apps/web)
# Copy to apps/web/.env.local or set as environment variables
# NEVER commit .env files to version control
# ===========================================

# -------------------------------------------
# API Configuration
# -------------------------------------------
# URL to the NestJS backend API
NEXT_PUBLIC_API_URL=http://localhost:3001

# -------------------------------------------
# PostgreSQL Database
# -------------------------------------------
# Same as apps/api - needed for tRPC server-side queries
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=
POSTGRES_DB=ryla
POSTGRES_ENVIRONMENT=local

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
# MUST match the JWT_ACCESS_SECRET in apps/api/.env
# This is needed for tRPC server-side authentication
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production

# -------------------------------------------
# PostHog Analytics (Optional)
# -------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -------------------------------------------
# Finby Payment Gateway
# https://finby.eu/dashboard
# -------------------------------------------
# API v1 (Subscriptions) - Required for subscription purchases
FINBY_API_KEY=
FINBY_MERCHANT_ID=
FINBY_WEBHOOK_SECRET=

# API v3 (One-time payments) - Required for credit purchases
FINBY_PROJECT_ID=
FINBY_SECRET_KEY=

# Site URL for payment callbacks (used in payment redirects)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: Test mode flag (for development)
FINBY_TEST_MODE=false

