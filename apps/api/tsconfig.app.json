{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "../../dist/apps/api",
    "baseUrl": "../..",
    "paths": {
      "@ryla/shared": ["libs/shared/src/index.ts"],
      "@ryla/business": ["libs/business/src/index.ts"],
      "@ryla/data": ["libs/data/src/index.ts"],
      "@ryla/data/*": ["libs/data/src/*"],
      "@ryla/ui": ["libs/ui/src/index.ts"],
      "@ryla/analytics": ["libs/analytics/src/index.ts"],
      "@ryla/trpc": ["libs/trpc/src/index.ts"],
      "@ryla/trpc/*": ["libs/trpc/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
