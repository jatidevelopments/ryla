        "run",
        "--path=/mcp",
        "--env=dev",
        "--",
        "npx", "-y", "mcp-remote@latest",
        "https://mcp.posthog.com/sse",
        "--header", "Authorization:${POSTHOG_AUTH_HEADER}"
