{
  "$schema": "https://json.schemastore.org/mcp.json",
  "_comment": "MCP Server Configuration using Infisical for secrets management. See docs/technical/INFISICAL-SETUP.md",
  "mcpServers": {
    "ryla-api": {
      "_comment": "RYLA API MCP Server - uses /mcp secrets from Infisical",
      "command": "infisical",
      "args": [
        "run",
        "--path=/mcp",
        "--env=dev",
        "--",
        "npx", "tsx", "/Users/admin/Documents/Projects/RYLA/apps/mcp/src/main.ts"
      ]
    },
    "github": {
      "_comment": "GitHub MCP Server - GITHUB_TOKEN from /mcp",
      "command": "infisical",
      "args": [
        "run",
        "--path=/mcp",
        "--env=dev",
        "--",
        "npx", "-y", "@modelcontextprotocol/server-github"
      ]
    },
    "slack": {
      "_comment": "Slack MCP Server - SLACK_BOT_TOKEN, SLACK_TEAM_ID from /mcp",
      "command": "infisical",
      "args": [
        "run",
        "--path=/mcp",
        "--env=dev",
        "--",
        "npx", "-y", "@modelcontextprotocol/server-slack"
      ]
    },
    "filesystem": {
      "_comment": "Filesystem MCP Server - no secrets needed",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/admin/Documents/Projects/RYLA/apps",
        "/Users/admin/Documents/Projects/RYLA/libs",
        "/Users/admin/Documents/Projects/RYLA/docs",
        "/Users/admin/Documents/Projects/RYLA/playwright",
        "/Users/admin/Documents/Projects/RYLA/ai",
        "/Users/admin/Documents/Projects/RYLA/config"
      ]
    },
