# ===========================================
# RYLA MVP - Environment Configuration
# ===========================================
# Copy this file to .env and fill in values
# NEVER commit .env to version control
# ===========================================

# -------------------------------------------
# Application
# -------------------------------------------
NODE_ENV=development
APP_NAME=ryla-mvp
APP_PORT=3000
APP_URL=http://localhost:3000

# -------------------------------------------
# Database
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ryla_dev
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false

# -------------------------------------------
# Redis (Cache/Sessions)
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -------------------------------------------
# Authentication
# -------------------------------------------
AUTH_JWT_SECRET=
AUTH_JWT_EXPIRY=24h
AUTH_REFRESH_TOKEN_EXPIRY=7d

# -------------------------------------------
# GitHub Integration (MCP)
# -------------------------------------------
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=ryla

# -------------------------------------------
# Slack Integration (MCP)
# -------------------------------------------
SLACK_BOT_TOKEN=
SLACK_TEAM_ID=
SLACK_SIGNING_SECRET=
SLACK_WEBHOOK_AUDIT=
SLACK_WEBHOOK_LEARNINGS=
SLACK_WEBHOOK_DEPLOYS=
SLACK_WEBHOOK_ALERTS=

# -------------------------------------------
# Analytics (PostHog MCP)
# -------------------------------------------
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# -------------------------------------------
# Testing (Playwright)
# -------------------------------------------
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_HEADLESS=true

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# -------------------------------------------
# Feature Flags
# -------------------------------------------
FEATURE_ANALYTICS_ENABLED=true
FEATURE_SLACK_NOTIFICATIONS=true

