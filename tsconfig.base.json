{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ryla/shared": ["libs/shared/src/index.ts"],
      "@ryla/business": ["libs/business/src/index.ts"],
      "@ryla/business/*": ["libs/business/src/*"],
      "@ryla/data": ["libs/data/src/index.ts"],
      "@ryla/data/*": ["libs/data/src/*"],
      "@ryla/ui": ["libs/ui/src/index.ts"],
      "@ryla/analytics": ["libs/analytics/src/index.ts"],
      "@ryla/trpc": ["libs/trpc/src/index.ts"],
      "@ryla/trpc/*": ["libs/trpc/src/*"],
      "@ryla/payments": ["libs/payments/src/index.ts"],
      "@ryla/payments/*": ["libs/payments/src/*"],
      "@ryla/email": ["libs/email/src/index.ts"],
      "@ryla/email/*": ["libs/email/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
