{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ryla/shared": ["dist/libs/shared/src/index"],
      "@ryla/business": ["dist/libs/business/src/index"],
      "@ryla/business/*": ["dist/libs/business/src/*"],
      "@ryla/data": ["dist/libs/data/src/index"],
      "@ryla/data/*": ["dist/libs/data/src/*"],
      "@ryla/ui": ["dist/libs/ui/src/index"],
      "@ryla/analytics": ["dist/libs/analytics/src/index"],
      "@ryla/trpc": ["dist/libs/trpc/src/index"],
      "@ryla/trpc/*": ["dist/libs/trpc/src/*"],
      "@ryla/payments": ["dist/libs/payments/src/index"],
      "@ryla/payments/*": ["dist/libs/payments/src/*"],
      "@ryla/email": ["dist/libs/email/src/index"],
      "@ryla/email/*": ["dist/libs/email/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
